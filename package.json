{
  "name": "projeto-digitalizador-de-manuscritos",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "keywords": ["ocr", "text-extraction", "manuscripts", "digitalization"],
