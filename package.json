    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tesseract.js": "^5.0.3"
  },
  "build": {
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "executableName": "digitalizador-manuscritos"
    }
  }
